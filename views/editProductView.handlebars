<div class="table responsive">
    <form method="POST" action="/products/edit/{{data.id}}">
        <table class="table table-condensed">
            <tbody>
                <tr>
                    <th width="200">Product Number: </td>
                    <td><input type="text" name="pnumber" required 
                        value="{{data.productNumber}}"></td>
                </tr>
                <tr>
                    <th>Product Name: </th>
                    <td><input type="text" name="pname" required size="40"
                        value="{{data.productName}}"></td>
                </tr>
                <tr>
                    <th>Product Description: </th>
                    <td><input type="text" name="pdescription" required size="40"
                        value="{{data.productDescription}}"></td>
                </tr>
                <tr>
                    <th>Product Price: </th>
                    <td><input type="text" name="pprice" required size="40"
                        value="{{data.productPrice}}"></td>
                </tr>
                <tr>
                    <th>Product Quantity: </th>
                    <td><input type="text" name="pquantity" required size="40"
                        value="{{data.productQuantity}}"></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save" class="btn btn-success">
                        <input type="button" value="Cancel" class="btn btn-danger"
                            class="cancel" onclick="cancelAdd()">
                    </td>
                </tr>
            </tfoot>
        </table>
    </form>
</div>